<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mamas.Views.AdminViews.ConfAsignaturasPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand">
            <Label Text="Nombre" />
            <Entry x:Name="nombreAsignatura" 
                   Text="{Binding Path=NombreAsignatura}"
                   Placeholder="Nombre de la Asignatura"/>
            <Button Text="Añadir"
                    Command="{Binding Path=insertarAsignaturaCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>